extends layout

block content
	<div id="content">
		<div id="main">
			each val,index in blogs
				div
					a(href='blog'+moment(val.date).format('/YYYY/MM/DD/')+val.slug)
						h2=val.title
					a(href='blog'+moment(val.date).format('/YYYY/MM/DD/')+val.slug)
						p(class='blog-summary')=val.summary+"..."
		</div>
		<div id="sidebar">
			#updates.boxed
				<h2 class="title">博客分类</h2>
				.content
					ul
						each val,index in blogTypeCount
							li
								a(href='blog/list?blogType='+val._id)=val._id + "(" +val.count+")"
		</div>
	</div>

	<div id="footer">
		<p id="legal">Copyright &copy; 2016 www.coderyu.com</p>
	</div>