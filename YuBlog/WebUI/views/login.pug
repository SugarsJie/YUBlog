extends layout

block content
	.login-wrapper
		form( action="/login",method="post").form-horizontal
			.form-group
				label(for='username',class='col-sm-3 control-label') 账号：
				.col-sm-9
					input(type='text',class='form-control',id='username',name='username',placeholder='账号')
			.form-group
				label(for='password',class='col-sm-3 control-label') 密码：
				.col-sm-9
					input(type='password',class='form-control',id='password',name='password',placeholder='密码')
			.form-group
				.col-sm-offset-3.col-sm-9
					button(type='submit',class='btn btn-default w100') 登录