extends ../layout

block content
	script(src='/ckeditor_4.5.8/ckeditor.js')
	.create-blog-warpper
		form( action="/manage/create",method="post")
			.form-group
				<label for="title">博客标题</label>
				<input type="text" class="form-control" id="title" name='title' placeholder="标题">
			.form-group
				<label for="tags">关键热词</label>
				<input type="text" class="form-control" id="tags" name='tags' placeholder="关键词">
			.form-group
				<label for='blogType'>博客类型</label>
				select.form-control#blogType(name='blogType')
					each val,index in blogTypes
						option(value=val.name)=val.name
			.checkbox
				<label><input type="checkbox" id='publish' name='publish'>发布</label>
			.form-group
				<label for="editorBlog">博客正文</label>
				textarea(name='editorBlog',id='editorBlog')
				script.
					var config = {
						extraPlugins: 'codesnippet',
						codeSnippet_theme: 'tomorrow-night',
						height:'600px'
					};
					CKEDITOR.replace( 'editorBlog', config );

				
			button(type='submit',class='btn btn-default w100') 提交
